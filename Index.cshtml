@model WebApplication29.Models.Checkbox1Model;
@using (Html.BeginForm("Index","Checkbox1",FormMethod.Post))
{
    <h2>Want Addition Benfit using CheckBox</h2>
    <span>Tea:</span>@Html.CheckBox("Tea",true)
    <span>| Loundry:</span>@Html.CheckBox("Tea",false)
    <span>| Breakfast:</span>@Html.CheckBox("Tea",false)

    <hr />
    <h2>Want Additional Benefit using CheckBoxFor: </h2><br />
    <span>Tea: </span> @Html.CheckBoxFor(m => m.Tea, true)
    <span> | Loundry: </span> @Html.CheckBoxFor(m => m.Loundry, false)
    <span> | Breakfast: </span> @Html.CheckBoxFor(m => m.Breakfast, false)
    <br />
    <br />
    <input type="submit" value="ok"/>

}
<p>@ViewBag.Tea</p><br />
<p>@ViewBag.Loundry</p><br />
<p>@ViewBag.Breakfast</p>
