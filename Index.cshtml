
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

@model WebApplication34.Models.Clientside

<h2>Student Details</h2>
@using (Html.BeginForm("abc", "Clientside", FormMethod.Post))
{
<ol>
    <li>
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name)
    </li>
    <br />
    <li>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
    </li>
    <br />
    <li>
        @Html.LabelFor(m => m.ConfirmEmail)
        @Html.TextBoxFor(m => m.ConfirmEmail)
        @Html.ValidationMessageFor(m => m.ConfirmEmail)
    </li>
    <br />
    <li>
        @Html.LabelFor(m => m.Age)
        @Html.TextBoxFor(m => m.Age)
        @Html.ValidationMessageFor(m => m.Age)
    </li>
    <br />
    <li>
        @Html.LabelFor(m => m.HireDate)
        @Html.TextBoxFor(m => m.HireDate)
        @Html.ValidationMessageFor(m => m.HireDate)
    </li>
    <br />
    <li>
        @Html.LabelFor(m => m.Pno)
        @Html.TextBoxFor(m => m.Pno)
        @Html.ValidationMessageFor(m => m.Pno)
    </li>



</ol>
    <br />
    <input type="submit" value="Save Student Details" />

}
<hr />
<h3 style="color:green">Student Details</h3>
<h4 style="color:green">
<b>Name: @ViewBag.name<br />
<b>Email: @ViewBag.email<br />
 <b>age:</b>@ViewBag.age<br />
 <b>Date:-</b>@ViewBag.hiredate<br />
<b>phone no:-</b>@ViewBag.pno


