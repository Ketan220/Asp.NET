<h3><b>Forms - Form Collection Objects</b></h3>
@using (Html.BeginForm("Submit", "User", FormMethod.Post))
{ 
    <table>
        <tr>
            <td>Enter ID: </td>            
            <td>@Html.TextBox("Id")</td>
        </tr>
        <tr>
            <td>Enter Name: </td>
            <td>@Html.TextBox("Name")</td>
        </tr>
        <tr>
            <td>Addon: </td>
            <td>@Html.CheckBox("Addon", false)</td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Submit"></td>
        </tr>
    </table>
}
<h4 style="color:purple">
    ID: @ViewBag.Id<br />
    Name: @ViewBag.Name<br />
    Addon: @ViewBag.Addon
</h4>
